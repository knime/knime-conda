<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="CondaEnvironment" name="CondaEnvironment" schema="schema/CondaEnvironment.exsd"/>
   <extension
         point="org.knime.core.EarlyStartup">
      <provider
            class="org.knime.conda.envbundling.environment.EarlyStartupCondaEnvironmentInstallation"
            startupStage="AFTER_PROFILES_SET">
      </provider>
   </extension>
   <extension
         point="org.knime.product.warmstartAction">
      <warmstartAction
            id="org.knime.conda.envbundling.warmstartAction"
            name="Conda Environment Installation"
            class="org.knime.conda.envbundling.environment.CondaEnvironmentWarmstartAction"
            priority="800"
            description="Pre-installs all bundled conda environments to reduce startup time for subsequent runs">
      </warmstartAction>
      <warmstartAction
            id="org.knime.conda.envbundling.warmstartCleanupAction"
            name="Conda Environment Cleanup"
            class="org.knime.conda.envbundling.environment.CondaEnvironmentWarmstartCleanupAction"
            priority="1000"
            description="Removes temporary installation artifacts (channels, PyPI indices, and caches) to free disk space after environment installation">
      </warmstartAction>
   </extension>
</plugin>
