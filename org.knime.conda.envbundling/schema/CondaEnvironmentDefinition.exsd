      <documentation>
         Definition of a Conda environment consisting of a unique environment name and a &lt;a href=&quot;https://docs.conda.io/projects/conda/en/latest/user-guide/tasks/manage-environments.html#building-identical-conda-environments&quot;&gt;specification file&lt;/a&gt; for each platform.
      </documentation>
   </annotation>

   <element name="extension">
      <annotation>
         <appinfo>
            <meta.element />
         </appinfo>
      </annotation>
      <complexType>
         <sequence minOccurs="1" maxOccurs="unbounded">
            <element ref="condaEnv"/>
         </sequence>
         <attribute name="point" type="string" use="required">
            <annotation>
               <documentation>
                  
               </documentation>
            </annotation>
         </attribute>
         <attribute name="id" type="string">
            <annotation>
               <documentation>
                  
               </documentation>
            </annotation>
         </attribute>
         <attribute name="name" type="string">
            <annotation>
               <documentation>
                  
               </documentation>
               <appinfo>
                  <meta.attribute translatable="true"/>
               </appinfo>
            </annotation>
         </attribute>
      </complexType>
   </element>

   <element name="condaEnv">
      <complexType>
         <sequence minOccurs="1" maxOccurs="unbounded">
            <element ref="specificationFile"/>
         </sequence>
         <attribute name="name" type="string">
            <annotation>
               <documentation>
                  Name used to identify this bundled conda environment
               </documentation>
            </annotation>
         </attribute>
      </complexType>
   </element>

   <element name="specificationFile">
      <complexType>
         <attribute name="os">
            <annotation>
               <documentation>
                  
               </documentation>
