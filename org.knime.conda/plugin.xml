<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.knime.workbench.repository.categories">
      <category
            description="AP Repository Template"
            level-id="template"
            name="AP Repository Template"
            path="/misc">
      </category>
   </extension>   
   <extension
         point="org.knime.workbench.repository.nodes">
      <node
            category-path="/scripting/conda"
            factory-class="org.knime.conda.nodes.envprop.CondaEnvironmentPropagationNodeFactory">
      </node>
   </extension>
   <extension
         point="org.knime.core.NodeFactoryClassMapper">
      <NodeFactoryClassMapper
            classMapper="org.knime.conda.nodes.envprop.CondaEnvironmentPropagationNodeClassMapper">
      </NodeFactoryClassMapper>
   </extension>
   <extension
         point="org.knime.core.FlowVariableType">
      <VariableType
            extension="org.knime.conda.CondaEnvironmentPropagation$CondaEnvironmentType$CondaEnvironmentTypeExtension">
      </VariableType>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.knime.workbench.ui.preferences"
            class="org.knime.conda.prefs.CondaPreferencePage"
            id="org.knime.conda.CondaPreferencePage"
            name="Conda">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.knime.conda.prefs.CondaPreferenceInitializer">
      </initializer>
   </extension>
</plugin>
