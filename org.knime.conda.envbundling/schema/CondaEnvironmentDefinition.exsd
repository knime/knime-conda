               <restriction base="string">
                  <enumeration value="linux">
                  </enumeration>
                  <enumeration value="macosx">
                  </enumeration>
                  <enumeration value="win32">
                  </enumeration>
               </restriction>
            </simpleType>
         </attribute>
         <attribute name="arch">
            <annotation>
               <documentation>
                  
               </documentation>
            </annotation>
            <simpleType>
               <restriction base="string">
                  <enumeration value="x86_64">
                  </enumeration>
                  <enumeration value="x86">
                  </enumeration>
                  <enumeration value="aarch64">
                  </enumeration>
               </restriction>
            </simpleType>
         </attribute>
         <attribute name="file" type="string">
            <annotation>
               <documentation>
                  
               </documentation>
               <appinfo>
                  <meta.attribute kind="resource"/>
